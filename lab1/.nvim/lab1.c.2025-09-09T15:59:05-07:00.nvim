#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
  char *buffer = NULL;
  size_t n = 0;

  printf("Please enter some text: ");

  ssize_t line = getline(&buffer, &n, stdin);
  char *token = NULL;
  char *delim = " ";
  char *saveptr = buffer;
  
  token = strtok_r(saveptr, delim, &saveptr);
  while (token) {
    printf("%s\n", token);
    token = strtok_r(saveptr, delim, &saveptr);
  }
  free(buffer);
}
