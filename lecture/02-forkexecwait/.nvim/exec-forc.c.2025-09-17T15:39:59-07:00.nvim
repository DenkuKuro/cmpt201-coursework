#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>

int main() {
  pid_t pid = fork();

  if (pid == 0) {
    printf("CHILD!");
    execl("/bin/ls", "/bin/ls", "-a", "-l", "-h", (char *)NULL);
  } else {
    printf("PARENT!");
    execlp("/bin/ls", "/bin/ls", "-a", (char *)NULL);
  }

  printf("%d\n", getpid());
}
